{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build"
        ]
      }
    }
  },
  "namedInputs": {
    "noMD": [
      "!{projectRoot}/**/*.md"
    ]
  },
  "targetDefaults": {
    "test": {
      "cache": true
    },
    "dev": {
      "dependsOn": [
        "^build"
      ]
    },
    "build": {
      "inputs": [
        "noMD"
      ],
      "dependsOn": [
        "^build"
      ],
      "cache": true
    }
  },
  "defaultBase": "main",
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    }
  ]
}